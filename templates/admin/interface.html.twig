            <div class="invoice-untreated">
                <span>{{invoice.createdAt|ago}} </span>
                <p>Article : "<strong> {{invoice.description.title}} </strong>" </p>
                <p>Client : {{invoice.customer.name}}</p>
                <a class="button" href=" {{path('invoice_done', {'id': invoice.id})}} ">Marquer comme trait√© ?</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
