{% extends "interfacelayout.html.twig" %}

{% block body %}

    <div class="article-interface">
        {% for article in articles %}
            <div class="article-grid">
                    <img src="{{ vich_uploader_asset(article, 'imageFile')| imagine_filter('squared_thumb_blog') }}" alt="{{article.title}}">
                    <h3> {{article.title}} </h3>
                <a class="button" href=" {{path('article_update', {'slug': article.slug})}} ">Editer</a>
                <a class="button" href=" {{path('article_delete', {'id': article.id})}} ">Supprimer</a>
            </div>
        {% endfor %}
    </div>
    

{% endblock %}