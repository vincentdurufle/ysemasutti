{% extends 'base.html.twig' %}

{% block title %}Yse Masutti - Blog
{% endblock %}

{% block body %}
    <div class="article-container">
        {% for article in articles %}
            <div class="article">
                <h1>{{article.title}}</h1>
                <span>
                    {{article.datecreation|ago}}
                </span>
                <div class="article-img-container selected">
                    <img src=" {{vich_uploader_asset(article, 'imageFile')}} " alt="">
                </div>
                <div class="article-text-container">
                    {{article.text|raw}}
                </div>
            </div>
        {% endfor %}

        <a href="{{path('article_show_new', {'count': 1})}} " data-no-swup class="button">Pr√©cedents articles</a>
    </div>
{% endblock %} 

